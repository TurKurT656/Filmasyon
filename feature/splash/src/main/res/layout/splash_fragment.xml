<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.turkurt656.feature.splash.ui.SplashViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_33">

        <ImageView
            android:id="@+id/imgFilmasyon"
            android:layout_width="156dp"
            android:layout_height="0dp"
            android:scaleY="1.5"
            android:scaleX="1.5"
            android:layout_marginTop="112dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="@id/imgFilmasyon"
            app:layout_constraintStart_toStartOf="@id/imgFilmasyon"
            app:layout_constraintTop_toBottomOf="@id/imgFilmasyon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/powered_by"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@id/imgTheMovieDb"
            app:layout_constraintStart_toStartOf="@id/imgTheMovieDb" />


        <ImageView
            android:id="@+id/imgTheMovieDb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="112dp"
            android:contentDescription="@string/the_movie_db"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:src="@drawable/the_movie_db"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>